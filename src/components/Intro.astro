---
import Card from "../components/Card.astro";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
---

<article class="w-full mx-auto text-center py-10 lg:w-[740px]">
  <img
    class="w-100 h-80 mx-auto p-4"
    src="https://avatars.githubusercontent.com/u/47835172"
    alt=""
  />
  <h1 class="text-white text-5xl font-bold flex justify-center flex-row">
    {
      lang && lang == "en" ? (
        <div>
          I am FeryaelDev <br />
          (Fernando Gonzalez Serrano)
        </div>
      ) : (
        <div>
          Soy FeryaelDev <br />
          (Fernando Gonzalez Serrano)
        </div>
      )
    }
  </h1>
  <br />
  <h2>
    {
      lang && lang == "en" ? (
        <div>
          +2 years of experience. Mobile / Web Developer. From Palma, Spain 🇪🇸.
          I specialize in creating unique and innovative apps.
        </div>
      ) : (
        <div>
          +2 años de experiencia. Desarrollador móvil/web. Desde Palma, España
          🇪🇸. Me especializo en la creación de aplicaciones únicas e
          innovadoras.
        </div>
      )
    }
  </h2>
</article>
<article class="w-full mx-auto py-10 lg:w-[740px]">
  <Card
    href="https://developer.android.com"
    title="Desarrollador Mobile"
    body="Apasionado en Android (usando Kotlin y Jetpack Compose como 'main focus'"
  />

  <Card
    href="https://web.dev"
    title="Desarrollador Web"
    body="Programador especializado en Frontend (tecnologías HTML, CSS, JS, React y Vue)"
  />
</article>
